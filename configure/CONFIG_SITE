include $(CONFIG_SITE_TOP)/common_dirs.mak

PKG_ARCH = $(T_A)
ifeq '$(PKG_ARCH)' 'linuxRT_glibc-x86_64'
PKG_ARCH	= rhel6-x86_64
endif

PCRE_TOP := $(PSPKG_ROOT)/release/pcre/8.37/$(PKG_ARCH)
